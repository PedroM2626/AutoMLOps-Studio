{
  "name": "automlops-studio-desktop",
  "version": "1.0.0",
  "description": "Desktop wrapper for AutoMLOps Studio",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.automlops.studio",
    "productName": "AutoMLOps Studio",
    "files": [
      "electron-main.js",
      "electron-preload.js",
      "app.py",
      "automl_engine.py",
      "cv_engine.py",
      "stability_engine.py",
      "mlops_utils.py",
      "requirements.txt",
      ".env.example",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "devDependencies": {
    "electron": "^40.6.0",
    "electron-builder": "^26.8.1",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  }
}
